extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 #{title}
                a.w3-btn.w3-round.w3-grey(href="/periodos/registo") +
        .w3-container
            table.w3-table-all
                tr
                    th Periodo
                    th Actions
                each periodo in lista
                    tr
                        td
                            a(href=`/periodos/${periodo.id}`)= periodo.id
                        td
                            span
                                a(href=`/periodos/edit/${periodo.id}`) Edit
                            |  | 
                            span
                                a(href=`/periodos/delete/${periodo.id}`) Delete
        footer.w3-container.w3-blue
            h5 Gerado por EngWeb2024 in #{data} - 
                a(href="/") Return