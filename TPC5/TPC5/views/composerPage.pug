extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 #{compositor.nome}
        .w3-container
            ul.w3-ul.w3-card-4(style="width:50%")
                li 
                    strong Name: 
                    | #{compositor.nome}
                li 
                    strong Bio: 
                    | #{compositor.bio}
                li 
                    strong Birthday Date: 
                    | #{compositor.dataNasc}
                li 
                    strong Death Date: 
                    | #{compositor.dataObito}
                li 
                    strong Period: 
                    | #{compositor.periodo}
        .w3-container.w3-margin-8
            ul.w3-ul
        footer.w3-container.w3-teal
            address Gerado por EngWeb2024 em #{data} - 
                a(href="/compositores") Return